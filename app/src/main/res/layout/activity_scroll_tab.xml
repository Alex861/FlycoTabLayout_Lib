<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:scrollbars="none">

    <com.flyco.tablayout.ScrollTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3ff0"
        tl:tl_indicator_drawable="@drawable/icon_new_address_tab_select"
        tl:tl_indicator_height="8dp"
        tl:tl_indicator_width="14dp"
        tl:tl_textBold="SELECT"
        tl:tl_textSelectColor="@color/colorAccent"
        tl:tl_textUnselectColor="@color/cardview_dark_background" />


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#fcc" />

</LinearLayout>